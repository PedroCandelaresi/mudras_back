# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN - BACKEND MUDRAS
# Servidor: mudras.nqn.net.ar
# ===========================================

# Base de datos MySQL (Producción)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=mudras
DB_PASSWORD=mudras2025
DB_DATABASE=mudras

# Puerto del servidor backend (interno)
PORT=4000

# Entorno de ejecución
NODE_ENV=production

# Clave secreta para autenticación frontend-backend
X_SECRET_KEY=mudras_secret_key_2024_secure_connection_frontend_backend

# JWT - Configuración de seguridad para producción
JWT_SECRET=mudras_jwt_super_secure_secret_key_production_2024_nqn_argentina
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS - Configuración para producción
CORS_ORIGIN=https://mudras.nqn.net.ar
CORS_CREDENTIALS=true

# OAuth Google (Configurar con credenciales de producción)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://mudras.nqn.net.ar/api/auth/google/callback

# OAuth Instagram Basic Display (Configurar con credenciales de producción)
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
INSTAGRAM_REDIRECT_URI=https://mudras.nqn.net.ar/api/auth/instagram/callback

# URLs de redirección del frontend
CLIENTE_PANEL_URL=https://mudras.nqn.net.ar/cliente/panel
ADMIN_PANEL_URL=https://mudras.nqn.net.ar/panel

# Configuración de logs
LOG_LEVEL=error

# Configuración de GraphQL para producción
GRAPHQL_PLAYGROUND=false
GRAPHQL_INTROSPECTION=false

# Configuración de rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Configuración de sesiones
SESSION_SECRET=mudras_session_secret_production_2024_secure_key
